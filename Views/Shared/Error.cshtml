@model AlphaMaterials.Models.ErrorViewModel

@{
    ViewData["Title"] = "Ошибка";
    Layout = "_Layout";
}

<h1 class="text-danger">Ошибка</h1>
<p class="text-muted">Произошла непредвиденная ошибка при обработке запроса.</p>

@if (!string.IsNullOrEmpty(Model.RequestId))
{
    <p>
        <strong>Request ID:</strong>
        <code>@Model.RequestId</code>
    </p>
}
